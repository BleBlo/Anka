{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(PIPELINE|STEP|IF|FOR_EACH|WHILE|TRY|MATCH)\\b",
      "end": "^\\s*(END|OUTPUT)\\b"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(PIPELINE|STEP|IF|ELSE|FOR_EACH|WHILE|TRY|ON_ERROR|MATCH|CASE|DEFAULT)\\b.*:?\\s*$",
    "decreaseIndentPattern": "^\\s*(END|ELSE|ON_ERROR|CASE|DEFAULT|OUTPUT)\\b"
  }
}
