{
  "id": "map_010",
  "category": "map",
  "description": "Add a new column 'tripled' calculated as value multiplied by 3",
  "input_schema": {
    "data": [
      {"name": "id", "type": "INT"},
      {"name": "value", "type": "INT"}
    ]
  },
  "test_cases": [
    {
      "input": {
        "data": [
          {"id": 1, "value": 10},
          {"id": 2, "value": 5},
          {"id": 3, "value": 7}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 10, "tripled": 30},
        {"id": 2, "value": 5, "tripled": 15},
        {"id": 3, "value": 7, "tripled": 21}
      ]
    },
    {
      "input": {
        "data": [
          {"id": 1, "value": 0}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 0, "tripled": 0}
      ]
    },
    {
      "input": {
        "data": [
          {"id": 1, "value": 100}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 100, "tripled": 300}
      ]
    }
  ]
}
