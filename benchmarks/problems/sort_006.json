{
  "id": "sort_006",
  "category": "sort",
  "description": "Sort items by name in ascending order",
  "input_schema": {
    "items": [
      {"name": "id", "type": "INT"},
      {"name": "name", "type": "STRING"},
      {"name": "value", "type": "INT"}
    ]
  },
  "test_cases": [
    {
      "input": {
        "items": [
          {"id": 1, "name": "Zebra", "value": 10},
          {"id": 2, "name": "Apple", "value": 20},
          {"id": 3, "name": "Mango", "value": 15}
        ]
      },
      "expected_output": [
        {"id": 2, "name": "Apple", "value": 20},
        {"id": 3, "name": "Mango", "value": 15},
        {"id": 1, "name": "Zebra", "value": 10}
      ]
    },
    {
      "input": {
        "items": [
          {"id": 1, "name": "X", "value": 5}
        ]
      },
      "expected_output": [
        {"id": 1, "name": "X", "value": 5}
      ]
    },
    {
      "input": {
        "items": []
      },
      "expected_output": []
    }
  ]
}
