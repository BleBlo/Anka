{
  "id": "map_001",
  "category": "map",
  "description": "Add a new column 'total' calculated as quantity multiplied by price",
  "input_schema": {
    "products": [
      {"name": "product_id", "type": "INT"},
      {"name": "name", "type": "STRING"},
      {"name": "quantity", "type": "INT"},
      {"name": "price", "type": "DECIMAL"}
    ]
  },
  "test_cases": [
    {
      "input": {
        "products": [
          {"product_id": 1, "name": "Widget", "quantity": 5, "price": 10.0},
          {"product_id": 2, "name": "Gadget", "quantity": 3, "price": 25.0}
        ]
      },
      "expected_output": [
        {"product_id": 1, "name": "Widget", "quantity": 5, "price": 10.0, "total": 50.0},
        {"product_id": 2, "name": "Gadget", "quantity": 3, "price": 25.0, "total": 75.0}
      ]
    },
    {
      "input": {
        "products": [
          {"product_id": 1, "name": "Item", "quantity": 0, "price": 100.0}
        ]
      },
      "expected_output": [
        {"product_id": 1, "name": "Item", "quantity": 0, "price": 100.0, "total": 0.0}
      ]
    },
    {
      "input": {
        "products": [
          {"product_id": 1, "name": "A", "quantity": 2, "price": 5.5},
          {"product_id": 2, "name": "B", "quantity": 4, "price": 3.25},
          {"product_id": 3, "name": "C", "quantity": 1, "price": 100.0}
        ]
      },
      "expected_output": [
        {"product_id": 1, "name": "A", "quantity": 2, "price": 5.5, "total": 11.0},
        {"product_id": 2, "name": "B", "quantity": 4, "price": 3.25, "total": 13.0},
        {"product_id": 3, "name": "C", "quantity": 1, "price": 100.0, "total": 100.0}
      ]
    }
  ]
}
