{
  "id": "operator_003",
  "category": "adversarial",
  "description": "Calculate half as value divided by 2 (integer division should preserve decimal result)",
  "input_schema": {
    "data": [
      {"name": "id", "type": "INT"},
      {"name": "value", "type": "INT"}
    ]
  },
  "test_cases": [
    {
      "input": {
        "data": [
          {"id": 1, "value": 10},
          {"id": 2, "value": 7},
          {"id": 3, "value": 3}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 10, "half": 5.0},
        {"id": 2, "value": 7, "half": 3.5},
        {"id": 3, "value": 3, "half": 1.5}
      ]
    },
    {
      "input": {
        "data": [
          {"id": 1, "value": 1}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 1, "half": 0.5}
      ]
    },
    {
      "input": {
        "data": [
          {"id": 1, "value": 0}
        ]
      },
      "expected_output": [
        {"id": 1, "value": 0, "half": 0.0}
      ]
    }
  ]
}
